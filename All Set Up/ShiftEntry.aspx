    <fieldset>
        <legend><b>
                    <h2>
                        Shift Information Details</h2>
                </b></legend>
        <asp:GridView ID="GridView1" runat="server" AutoGenerateDeleteButton="True"
                      DataKeyNames="VarShiftCode" DataSourceID="SqlDataSource1" 
                      AutoGenerateEditButton="True" AutoGenerateColumns="False" CellPadding="4" ForeColor="#333333" GridLines="None">
            <AlternatingRowStyle BackColor="White" />
            <Columns>
                <asp:BoundField DataField="VarShiftCode" HeaderText="Shift Code" 
                                ReadOnly="True" SortExpression="VarShiftCode" />
                <asp:BoundField DataField="VarShiftName" HeaderText="Shift Name" 
                                SortExpression="VarShiftName" />
                <%--<asp:TemplateField HeaderText="Class Name" SortExpression="VarClassId">
               
                <ItemTemplate>
                    <asp:DropDownList ID="DropDownList1" runat="server" 

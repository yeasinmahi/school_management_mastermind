            <SortedDescendingCellStyle BackColor="#D4DFE1" />
            <SortedDescendingHeaderStyle BackColor="#15524A" />
        </asp:GridView>
        <asp:SqlDataSource ID="SqlDataSource1" runat="server" 
                           ConnectionString="<%$ ConnectionStrings:SWISConnectionString %>" 
        
                           SelectCommand="SELECT [VarShiftCode], [VarShiftName], [VarClassId], [uid] FROM [ShiftInfo]" 
                           DeleteCommand="DELETE FROM [ShiftInfo] WHERE [VarShiftCode] = @VarShiftCode" 
                           InsertCommand="INSERT INTO [ShiftInfo] ([VarShiftCode], [VarShiftName], [VarClassId], [uid]) VALUES (@VarShiftCode, @VarShiftName, @VarClassId, @uid)" 
                           UpdateCommand="UPDATE [ShiftInfo] SET [VarShiftCode] = @VarShiftCode, [VarShiftName] = @VarShiftName, [VarClassId] = @VarClassId WHERE [VarShiftCode] = @VarShiftCode">
            <DeleteParameters>
                <asp:Parameter Name="VarShiftCode" Type="String" />
            </DeleteParameters>
            <InsertParameters>
                <asp:Parameter Name="VarShiftCode" Type="String" />
                <asp:Parameter Name="VarShiftName" Type="String" />
                <asp:Parameter Name="VarClassId" Type="String" />
                <asp:Parameter Name="uid" Type="String" />
            </InsertParameters>
            <UpdateParameters>
                <asp:Parameter Name="VarShiftName" Type="String" />
                <asp:Parameter Name="VarClassId" Type="String" />
                <asp:Parameter Name="uid" Type="String" />
                <asp:Parameter Name="VarShiftCode" Type="String" />
            </UpdateParameters>
        </asp:SqlDataSource>

